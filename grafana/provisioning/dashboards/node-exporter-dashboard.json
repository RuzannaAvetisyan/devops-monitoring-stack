{
  "uid": "node-exporter",
  "title": "Node Exporter Monitoring",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 4,
  "refresh": "15s",
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage (%)",
      "targets": [
        {
          "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU Load",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100 }
      },
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (%)",
      "targets": [
        {
          "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
          "legendFormat": "RAM Usage",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100 }
      },
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Disk Usage by Mountpoint (%)",
      "targets": [
        {
          "expr": "(1 - (node_filesystem_avail_bytes{device!~\"tmpfs|loop.*\",fstype!~\"tmpfs|overlay\"} / node_filesystem_size_bytes{device!~\"tmpfs|loop.*\",fstype!~\"tmpfs|overlay\"})) * 100",
          "legendFormat": "Disk: {{mountpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "min": 0, "max": 100 }
      },
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Network Traffic",
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total{device!~\"lo|veth.*\"}[5m])",
          "legendFormat": "RX (In): {{device}}",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total{device!~\"lo|veth.*\"}[5m])",
          "legendFormat": "TX (Out): {{device}}",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "binbps" }
      },
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    }
  ],
  "editable": true,
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}
